{
    "manifest_version": 2,
    "name": "Proxy Shortcut",
    "version": "1.0",
    "description": "Toggle between proxy setting on/off.",
    "icons": {
        "48": "icons/off-48.png"
    },
    "permissions": [
        "proxy"
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/off-48.png",
        "default_title": "Proxy Off"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "applications": {
        "gecko": {
            "strict_min_version": "60.0"
        }
    }
}